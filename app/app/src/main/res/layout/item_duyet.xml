<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="6">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:background="@drawable/duyet"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvRoom"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H1 - 201"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:background="@drawable/btnbg"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvPeriod"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 - 7"/>
        <TextView
            android:id="@+id/tvDate"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15/6/2021"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="user@gmail.com"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imApprove"
                android:background="@drawable/p_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/approve"/>

            <ImageView
                android:id="@+id/imDecline"
                android:background="@drawable/b_circle"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/decline"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>