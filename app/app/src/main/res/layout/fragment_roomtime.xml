<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.registerroom.RoomTimeFragment">

    <TextView
        android:gravity="center"
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nhập thông tin đăng ký"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thứ 2, 26 tháng 4"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/tvBD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tòa H1"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/tvRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="101"
        android:textSize="16sp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tiết bắt đầu"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/edtEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:hint="Tiết kết thúc"
            android:textColorHint="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Đăng ký"
        android:textColor="#000000"
        app:backgroundTint="#64E987" />
</LinearLayout>