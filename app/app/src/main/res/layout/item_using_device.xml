<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btnbg2"
    android:padding="5dp">
    <ImageView
        android:padding="10dp"
        android:id="@+id/image"
        android:src="@drawable/fan"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:paddingLeft="5dp"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvNameID"
                android:textStyle="bold"
                android:text="Thiết bị: Quạt - ID: 1"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:text="Ngưỡng"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="Nhiệt độ - độ ẩm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:text="Đơn vị"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:text="Bật:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvOnThreshold"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="35-55"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDV1"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:text="C-%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:text="Tắt:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvOffThreshold"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textSize="12dp"
                        android:text="30-30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDV2"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:text="C-%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Switch

            android:id="@+id/swt"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>